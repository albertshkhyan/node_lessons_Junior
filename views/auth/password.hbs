<div class="row">
    <div class="col">
        <h2>{{title}}</h2>
        {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
        {{/if}}
        <form action="/auth/password" method="POST">
            <div class="row">
                <div class="input-field col s12">
                    <input name="password" id="passw" type="password" class="validate">
                    <label class="active" for="passw">New Password</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit">Update password</button>
            <input type="text" name="token" value="{{token}}" hidden>
            <input type="text" name="userID" value="{{userID}}" hidden>
            <input type="text" name="_csrf" value="{{csrf}}" hidden>
        </form>
    </div>
</div>