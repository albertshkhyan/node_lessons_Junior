<h2>Cart</h2>
<table class="highlight">
    {{#if courses.length}}
    <thead>
        <tr>
            <th>Name</th>
            <th>Course count</th>
            <th>action</th>
        </tr>
    </thead>

    <tbody>
        {{#each courses}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.count}}</td>
            <td>
                <button class="wbtn-floating btn-small waves-effect waves-light red">delete</button>
            </td>


        </tr>
        {{/each}}

    </tbody>
</table>
<p>
    <strong>Total price of courses : </strong>
    <span>{{this.price}}</span>
</p>


{{/if}}