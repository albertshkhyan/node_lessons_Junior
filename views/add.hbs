<h1>Add Courses</h1>

<form method="POST" action="/courses">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required />
        <label for="title">Name of cours</label>
        <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
    </div>

    <div class="input-field">
        <input name="price" id="price" type="text" class="validate" required />
        <label for="price">Name of course</label>
        <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
    </div>

    <div class="input-field">
        <input name="image" id="addImage" type="text" class="validate" required />
        <label for="addImage">URL of image</label>
        <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>